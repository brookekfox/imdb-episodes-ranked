<h1><%= @shows.last.title.split.map(&:capitalize).join(' ') %></h1>
<div class="container">
	<table class="table">
		<tr>
			<td>TITLE</td>
			<td>EPISODE NUMBER</td>
			<td>RATING</td>
		</tr>
		<% @episodes.each do |ep| %>
			<tr>
				<td><%= ep[0] %></td>
				<td><%= ep[1] %>.<%= ep[2] %></td>
				<td><%= ep[3] %></td>
			</tr>
		<% end %>
	</table>
</div>